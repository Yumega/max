  添加Aria2 pro
 aria2 docker
docker run -d \
    --name aria2-pro \
    --restart unless-stopped \
    --log-opt max-size=1m \
    --network host \
    -e PUID=$UID \
    -e PGID=$GID \
    -e RPC_SECRET=token \
    -e RPC_PORT=6800 \
    -e LISTEN_PORT=6888 \
    -v /mnt/sdb1/aria2-config:/config \
    -v /mnt/sdb1/aria2-downloads:/downloads \
    p3terx/aria2-pro
