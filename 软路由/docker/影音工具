docker run -d \
  --name=radarr \
  -e PUID=1000 \
  -e PGID=1000 \
  -e TZ=Asia/Shanghai \
  -p 7878:7878 \
  -v /opt/radarr/data:/config \
  -v /mnt/sdb1/qbit:/downloads \
  --restart unless-stopped \
cr.hotio.dev/hotio/radarr:latest

docker run -d \
  --name=musicassistant \
  --net=host \
  -e PUID=1000 \
  -e PGID=1000 \
  -v /opt/musicassistant/data:/data \
  -v /mnt/sdb1/qbit/Music:/media \
  --restart unless-stopped \
  ghcr.io/music-assistant/server:latest

